A = [1 -1; -3 2];
B = [1; 1];
C = [-9 7];
D = 0;

% a)
% ZMR ohne Zustandsrückführung
sys = ss(A,B,C,D);
% gewünscht Pole
poles = [-2 -1];

% Berechnung der Regelmatrix K und Vorfilter V 
K = place(A, B, poles);
V = -inv(C * inv(A-B*K)*B);

% neues ZMR
A_ZR = A - B*K;
B_ZR = B * V;
C_ZR = C;
D_ZR = 0;

% ZMR mit Zustandsrückführung
sys_2 = ss(A_ZR, B_ZR, C_ZR, D_ZR);


% b)
% Test auf vollständige Beobachtbarkeit
rank(obsv(sys))

% Test 